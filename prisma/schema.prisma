generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider     = "mysql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

model ItemList {
  id         Int      @unique @default(autoincrement())
  name       String
  item       Item[]
  count      Int
  businessId Int
  business   Business @relation(fields: [businessId], references: [id])

  @@index([businessId])
}

model User {
  id         Int      @unique @default(autoincrement())
  name       String
  email      String
  password   String
  businessId Int      @unique
  business   Business @relation(fields: [businessId], references: [id])

  @@index([businessId])
}

model Item {
  id        Int      @unique @default(autoincrement())
  SKU       Int
  expDate   String
  listId    Int
  inventory ItemList @relation(fields: [listId], references: [id])

  @@index([listId])
}

model Business {
  id       Int        @unique @default(autoincrement())
  type     String     @db.VarChar(255)
  name     String     @db.VarChar(255)
  location String     @db.VarChar(255)
  admin    User?
  products ItemList[]
}